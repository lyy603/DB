<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <Button
        android:id="@+id/tab_btn"
        android:layout_width="@dimen/imageview_default_size"
        android:layout_height="@dimen/imageview_default_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_size_limitsmall"
        android:clickable="false" />

    <TextView
        android:id="@+id/tab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_size_limitsmall"
        android:layout_marginTop="@dimen/margin_size_limitsmall" />
</LinearLayout>